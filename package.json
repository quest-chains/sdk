{
  "name": "@quest-chains/sdk",
  "description": "An SDK for building applications on top of Quest Chains",
  "version": "0.1.5",
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "rm -rf dist && yarn tsc",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "typecheck": "tsc --noEmit",
    "prepare": "yarn generate",
    "prepublishOnly": "yarn build",
    "format": "prettier --ignore-path .gitignore --write \"{*,**/*}.{ts,tsx,js,jsx,json,yml,yaml,md,css,scss,sol}\"",
    "generate": "graphql-codegen --config=src/codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint",
      "pre-push": "yarn typecheck"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quest-chains/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/quest-chains/sdk/issues"
  },
  "homepage": "https://github.com/quest-chains/sdk#readme",
  "keywords": [
    "ethereum",
    "quest-chains"
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "eslint": {
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "author": "dan13ram",
  "module": "dist/sdk.esm.js",
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.0",
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/typescript": "^2.6.0",
    "@graphql-codegen/typescript-operations": "^2.4.3",
    "@graphql-codegen/typescript-urql": "^3.7.0",
    "husky": "^8.0.1",
    "tsdx": "^0.14.1"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "axios": "^0.27.2",
    "ethers": "^5.6.9",
    "fast-memoize": "^2.5.2",
    "graphql": "^16.5.0",
    "graphql-request": "^5.0.0",
    "urql": "^3.0.3"
  },
  "resolutions": {
    "**/tslib": "^2.4.0",
    "**/typescript": "^4.8.2",
    "**/prettier": "^2.7.1",
    "**/@typescript-eslint/eslint-plugin": "^5.36.2",
    "**/@typescript-eslint/parser": "^5.36.2"
  }
}
