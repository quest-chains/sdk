{
  "name": "@quest-chains/sdk",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": ["dist", "src"],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "yarn generate && tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "format": "prettier --ignore-path .gitignore --write \"{*,**/*}.{ts,tsx,js,jsx,json,yml,yaml,md,css,scss,sol}\"",
    "generate": "graphql-codegen --config=src/codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quest-chains/sdk.git"
  },
  "homepage": "https://github.com/quest-chains/sdk",

  "keywords": ["ethereum", "quest-chains"],
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "arrowParens": "avoid"
  },
  "author": "dan13ram",
  "module": "dist/sdk.esm.js",
  "size-limit": [
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.0",
    "@graphql-codegen/cli": "^2.7.0",
    "@graphql-codegen/typescript": "^2.6.0",
    "@graphql-codegen/typescript-operations": "^2.4.3",
    "@graphql-codegen/typescript-urql": "^3.5.13",
    "@size-limit/preset-small-lib": "^8.0.1",
    "husky": "^8.0.1",
    "size-limit": "^8.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "axios": "^0.27.2",
    "ethers": "^5.6.9",
    "fast-memoize": "^2.5.2",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0",
    "urql": "^2.2.2"
  }
}
